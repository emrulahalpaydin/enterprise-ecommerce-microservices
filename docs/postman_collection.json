{
  "info": {
    "name": "Microservices ECommerce (API Gateway)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "" },
    { "key": "userId", "value": "" },
    { "key": "categoryId", "value": "" },
    { "key": "productId", "value": "" },
    { "key": "bootstrapSecret", "value": "dev-admin-secret" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Bootstrap Admin (dev only)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": "{{baseUrl}}/api/auth/bootstrap-admin",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Pass123!\",\n  \"secret\": \"{{bootstrapSecret}}\"\n}"
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Pass123!\"\n}"
            }
          }
        },
        {
          "name": "Change User Role (Admin only)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/auth/users/{{userId}}/role",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"Admin\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": "{{baseUrl}}/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Pass123!\"\n}"
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": "{{baseUrl}}/api/auth/refresh",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accessToken\": \"{{token}}\",\n  \"refreshToken\": \"<refresh-token>\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Catalog",
      "item": [
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/categories",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Electronics\",\n  \"description\": \"Gadgets and devices\"\n}"
            }
          }
        },
        {
          "name": "List Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/categories"
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/products",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Laptop\",\n  \"sku\": \"SKU-001\",\n  \"description\": \"Ultrabook\",\n  \"price\": 1299.99,\n  \"currency\": \"USD\",\n  \"stock\": 10,\n  \"categoryId\": \"{{categoryId}}\",\n  \"variants\": [ { \"name\": \"Color\", \"value\": \"Silver\" } ]\n}"
            }
          }
        },
        {
          "name": "Update Stock",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/products/{{productId}}/stock",
            "body": {
              "mode": "raw",
              "raw": "5"
            }
          }
        },
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/products"
          }
        },
        {
          "name": "Get Product",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/products/{{productId}}"
          }
        }
      ]
    },
    {
      "name": "Basket",
      "item": [
        {
          "name": "Add Basket Item",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/basket/{{userId}}/items",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"productName\": \"Laptop\",\n  \"unitPrice\": 1299.99,\n  \"quantity\": 1\n}"
            }
          }
        },
        {
          "name": "Get Basket",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/api/basket/{{userId}}"
          }
        },
        {
          "name": "Remove Basket Item",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/api/basket/{{userId}}/items/{{productId}}"
          }
        },
        {
          "name": "Clear Basket",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/api/basket/{{userId}}"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/orders",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"items\": [\n    { \"productId\": \"{{productId}}\", \"productName\": \"Laptop\", \"unitPrice\": 1299.99, \"quantity\": 1 }\n  ]\n}"
            }
          }
        },
        {
          "name": "List Orders",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/api/orders"
          }
        },
        {
          "name": "Get Order",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/api/orders/{{orderId}}"
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "List Payments",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": "{{baseUrl}}/api/payments"
          }
        }
      ]
    }
  ]
}
